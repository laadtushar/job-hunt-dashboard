
generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  extensions = [vector]
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("USER")
  accounts      Account[]
  sessions      Session[]
  applications  JobApplication[]
  tasks         Task[]
  searchLogs    AgentSearchLog[]
  auditLogs     AgentAuditLog[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AllowedUser {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model InviteRequest {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  status    String   @default("PENDING") // PENDING, APPROVED, DENIED
  createdAt DateTime @default(now())
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
}

model JobApplication {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  company   String
  role      String
  jobId     String?  // External Job ID / Reference Number
  status    String   // APPLIED, SCREEN, INTERVIEW, OFFER, REJECTED, GHOSTED
  source    String   // GMAIL, MANUAL, LINKEDIN
  
  // Rich Data
  jobDescription String?
  salaryRange    String? // Original string from job description or email
  salaryMin      Float?
  salaryMax      Float?
  currency       String?
  
  location       String? // City, Remote, Hybrid
  
  // Company Info
  companyDomain   String?
  companyLinkedIn String?
  companyPortalUrl String?
  jobPostUrl      String?
  
  // Dates
  appliedDate     DateTime @default(now())
  lastUpdate      DateTime @updatedAt
  interviewDate   DateTime?
  offerDeadline   DateTime?
  
  // People
  recruiterName   String?
  recruiterEmail  String?
  hiringManager   String?
  
  // AI Analysis
  sentimentScore  Float?
  nextSteps       String?
  feedback        String?
  analysis        String? // Raw AI extraction JSON
  rejectionReason String? // Concise reason if rejected
  
  // Sync Status
  googleSheetRowId String?
  
  // Meta
  emailLogs       EmailLog[]
  originalEmailBody String? // Store strictly necessary part if helpful for debugging context
  isIgnored       Boolean @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  embedding JobEmbedding?
  tasks     Task[]
  extractionConfidence Float?  // 0-1 confidence from AI extraction

  @@index([company, role])
}

model EmailLog {
  id              String   @id @default(cuid())
  gmailId         String   @unique
  threadId        String
  receivedDate    DateTime
  snippet         String?
  body            String?   // Full email body (HTML or Text)
  
  applicationId   String?
  application     JobApplication? @relation(fields: [applicationId], references: [id])
  
  // AI Meta Data
  aiModel         String?
  aiProvider      String?
  aiOutput        String?   // JSON string of the full extraction result
  
  createdAt       DateTime @default(now())
  isIgnored       Boolean @default(false)
  
  // Meta extraction for easier querying/feedback
  sender          String?
  subject         String?

  embedding       EmailEmbedding?
}

model UserFeedback {
  id        String   @id @default(cuid())
  type      String   // "MERGE_PATTERN", "FALSE_POSITIVE"
  input     String   // JSON content
  createdAt DateTime @default(now())
}

model JobEmbedding {
  id        String   @id @default(cuid())
  jobId     String   @unique
  job       JobApplication @relation(fields: [jobId], references: [id], onDelete: Cascade)
  vector    Unsupported("vector(1024)") // Octen-Embedding-0.6B dimensions
  content   String   // The text chunk embedded
  createdAt DateTime @default(now())
}

model EmailEmbedding {
  id        String   @id @default(cuid())
  emailId   String   @unique
  email     EmailLog @relation(fields: [emailId], references: [id], onDelete: Cascade)
  vector    Unsupported("vector(1024)")
  content   String   // Subject + Sender + Snippet/Body
  type      String   // "POSITIVE" (Job Related) or "NEGATIVE" (Not Job Related)
  createdAt DateTime @default(now())
}

model Task {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  applicationId String?
  application   JobApplication? @relation(fields: [applicationId], references: [id], onDelete: SetNull)

  title         String
  description   String?
  priority      String   @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  status        String   @default("PENDING") // PENDING, IN_PROGRESS, DONE, DISMISSED
  category      String?  // FOLLOW_UP, INTERVIEW_PREP, APPLICATION, RESEARCH, NETWORKING
  dueDate       DateTime?

  aiGenerated   Boolean  @default(false)
  source        String?  // AI_SYNC, AI_STATUS_CHANGE, MANUAL

  completedAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model AgentSearchLog {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  userMessage     String   // The user's query about a missing job
  detectedIntent  String?  // The intent extracted by AI
  detectedCompany String?  // The company name extracted
  
  gmailQuery      String?  // The generated high-precision query
  foundEmailsCount Int     @default(0)
  foundJobsCount  Int      @default(0)
  
  reflection      String?  @db.Text // The agent's self-reflection/learning
  status          String   @default("COMPLETED") // COMPLETED, FAILED
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AgentAuditLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String   // GHOST_DETECT, DRIFT_CORRECT, DUPLICATE_MERGE, MISSING_SYNC, THREAD_WATCH
  targetId    String?  // applicationId or emailId
  payload     String?  @db.Text // JSON: details, before/after, reasoning
  reflection  String?  @db.Text
  status      String   @default("COMPLETED")
  createdAt   DateTime @default(now())
}
