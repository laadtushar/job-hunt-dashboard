
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  applications  JobApplication[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
}

model JobApplication {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  company   String
  role      String
  status    String   // APPLIED, SCREEN, INTERVIEW, OFFER, REJECTED, GHOSTED
  source    String   // GMAIL, MANUAL, LINKEDIN
  
  // Rich Data
  jobDescription String?
  salaryRange    String? // Original string from job description or email
  salaryMin      Float?
  salaryMax      Float?
  currency       String?
  
  location       String? // City, Remote, Hybrid
  
  // Company Info
  companyDomain   String?
  companyLinkedIn String?
  companyPortalUrl String?
  jobPostUrl      String?
  
  // Dates
  appliedDate     DateTime @default(now())
  lastUpdate      DateTime @updatedAt
  interviewDate   DateTime?
  offerDeadline   DateTime?
  
  // People
  recruiterName   String?
  recruiterEmail  String?
  hiringManager   String?
  
  // AI Analysis
  sentimentScore  Float?
  nextSteps       String?
  feedback        String?
  
  // Sync Status
  googleSheetRowId String?
  
  // Meta
  emailLogs       EmailLog[]
  originalEmailBody String? // Store strictly necessary part if helpful for debugging context
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([company, role])
}

model EmailLog {
  id              String   @id @default(cuid())
  gmailId         String   @unique
  threadId        String
  receivedDate    DateTime
  snippet         String?
  
  applicationId   String?
  application     JobApplication? @relation(fields: [applicationId], references: [id])
  
  createdAt       DateTime @default(now())
}
